---
const { link, src, text, title } = Astro.props;
---

<li class="w-[350px] lg:w-[320px] xl:w-[375px] h-full rounded-full">
  <a
    href={link}
    class="flex relative items-center"
    title={`${text} Full tour in ${title} `}
  >
    <img
      src={src}
      class="w-full h-88 lg:h-80 xl:h-95 object-cover rounded-full"
      alt={text}
      title=`foto en la que se muestra ${text}`
    />
    <div
      class="absolute flex justify-center items-center h-full rounded-full text-2xl px-4 bg-black/20 right-0 left-0 text-white"
    >
      <p class="text-6xl satisfy">
        {text.split(" ")[0]}
      </p>
    </div>
  </a>
</li>
