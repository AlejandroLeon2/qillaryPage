---
const { dia } = Astro.props;
---

<section class="max-w-3xl mx-auto px-4 ">

    <div class="space-y-4" id="acordeon">
      {
        dia.itinerary.map((dias, index) => (
          <details
            class=" w-200 relative max-w-md md:max-w-3xl lg:max-w-md xl:max-w-3xl rounded group"
            data-acordeon={index}
          >
            <summary class="cursor-pointer gap-8 delay-300 duration-300 select-none   bg-white hover:bg-gray-200 flex  items-center">
              <span class="z-1 w-14 font-semibold text-center py-3 text-white text-2xl bg-qillary-aqua p-4">
                {index + 1}
              </span>
              <h2 class="font-semibold  text-black text-lg">{`Day ${index + 1}: ${dias.title}`}</h2>
            </summary>
            <div class="absolute bottom-0 left-7 border-l-2 border-dashed border-qillary-aqua h-full w-1" />
            <div class=" pl-10 pr-4  space-y-3 text-gray-700">
              <p>{dias.description}</p>
            </div>
          </details>
        ))
      }
    </div>
</section>
