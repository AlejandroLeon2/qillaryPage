---
import { qillary } from "../data/qillary";
---

<footer class="bg-qillary-dark text-white text-sm lg:text-base">
  <div class="px-6 pt-12 grid grid-cols-1 md:grid-cols-4 lg:grid-cols-4 gap-8">
    <!-- Logo + Descripción -->
    <div class="flex flex-col col-span-1 justify-center items-center">
      <img
        src={qillary.contact.imagen}
        alt={qillary.contact.titulo}
        title="Logo Qillary Tours"
        class="w-80 mb-4"
      />
      <p class="leading-relaxed text-gray-400 max-w-xs mb-4">
        {qillary.contact.descripcion}
      </p>
    </div>

    <!-- Contactos -->
    <div class="max-w-lg pt-8 col-span-1 px-10 md:px-0">
      <h3 class="text-white font-semibold text-lg mb-3">Our Offices</h3>
      <ul class="space-y-2 mb-4 text-sm text-gray-400">
        <li>
          <span class="font-semibold"
            >{qillary.contact.oficinas[0].ciudad}:</span
          >
          {qillary.contact.oficinas[0].direccion}
        </li>
        <li>
          <span class="font-semibold"
            >{qillary.contact.oficinas[1].ciudad}:</span
          >
          {qillary.contact.oficinas[1].direccion}
        </li>
      </ul>
      <ul class="space-y-2 text-gray-400">
        <li>
          <i class="fas fa-envelope mr-2 text-qillary-aqua"></i>
          <a href={`mailto:${qillary.contact.contactos[0].valor}`}
            >{qillary.contact.contactos[0].valor}</a
          >
        </li>
        <li>
          <i class="fab fa-whatsapp mr-2 text-green-400"></i>
          <a
            href={`https://wa.me/${qillary.contact.contactos[1].valor}`}
            title={qillary.contact.contactos[1].title}
            target="_blank"
            rel="noopener"
          >
            {qillary.contact.contactos[1].valor}
          </a>
        </li>
      </ul>
    </div>
    <!-- Oficinas -->

    <section class="px-6 col-span-1 py-8 rounded-mdmax-w-lg mx-auto">
      <h3 class="text-xl font-semibold text-white mb-2">
        Subscribe to Our Networks
      </h3>
      <section class="flex flex-col gap-4 justify-center mt-4">
        <!-- Instagram -->
        <a
          href="https://www.instagram.com/qillary.tours"
          target="_blank"
          rel="noopener noreferrer"
          title="Síguenos en Instagram"
          aria-label="Qillary Tours en Instagram"
          class="text-white hover:text-pink-400 text-md transition"
        >
          <i class="fab fa-instagram"></i>
          <span class="text-md ml-2 text-gray-400 hover:text-pink-400"
            >@Qillary.tours</span
          >
        </a>

        <!-- Facebook -->
        <a
          href="https://www.facebook.com/100084896946880"
          target="_blank"
          rel="noopener noreferrer"
          title="Conéctate con nosotros en Facebook"
          aria-label="Qillary Tours en Facebook"
          class="text-white hover:text-blue-400 text-md transition"
        >
          <i class="fab fa-facebook-f"></i>
          <span class="text-md ml-2 text-gray-400 hover:text-blue-400"
            >@Qillary.tours</span
          >
        </a>

        <!-- TikTok -->
        <a
          href="https://www.tiktok.com/@qillary.tours"
          target="_blank"
          rel="noopener noreferrer"
          title="Mira nuestros videos en TikTok"
          aria-label="Qillary Tours en TikTok"
          class="text-white hover:text-gray-300 text-md transition"
        >
          <i class="fab fa-tiktok"></i>
          <span class="text-md ml-2 text-gray-400 hover:text-gray-300"
            >@Qillary.tours</span
          >
        </a>
      </section>
    </section>
    <div class="text-white col-span-1 px-6 py-8 rounded-md max-w-lg">
      <h3 class="text-xl font-semibold mb-4">Nuestro Instagram</h3>
      <p class="leading-relaxed text-sm text-gray-400">
        Follow our journey through breathtaking destinations, cultural
        snapshots, and unforgettable moments shared by real travelers across
        Peru.
      </p>
    </div>
    <div
      class="border-t mt-4 col-span-1 md:col-span-4 border-gray-700 py-6 text-center text-xs text-gray-400"
    >
      <p class="mb-1">
        <span lang="en">We speak English and Spanish.</span>
        <strong lang="es">Hablamos tu idioma.</strong>
      </p>
      <nav aria-label="Footer secondary navigation" class="sr-only">
        <!-- Opcional: enlaces legales o extra -->
      </nav>
      <p>© 2025 Qillary Tours. All rights reserved.</p>
    </div>
  </div>
</footer>
