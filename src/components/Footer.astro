---
import { qillary } from "../data/qillary";
---

<footer class="bg-qillary-dark text-white text-sm lg:text-base">
  <div class="px-6 pt-12 grid grid-cols-1 md:grid-cols-4 lg:grid-cols-4 gap-8">
    <!-- Logo + Descripción -->
    <div class="flex flex-col col-span-1 justify-center items-center">
      <img
        src={qillary.contact.imagen}
        alt={qillary.contact.titulo}
        title="Logo Qillary Tours"
        class="w-80 mb-4"
      />
      <p class="leading-relaxed text-gray-400 max-w-xs mb-4">
        {qillary.contact.descripcion}
      </p>
    </div>

    <!-- Contactos -->
    <div class="max-w-lg pt-8 col-span-1 px-10 md:px-0">
      <h3 class="text-white font-semibold text-lg mb-3">Our Offices</h3>
      <ul class="space-y-2 mb-4 text-sm text-gray-400">
        <li>
          <span class="font-semibold"
            >{qillary.contact.oficinas[0].ciudad}:</span
          >
          {qillary.contact.oficinas[0].direccion}
        </li>
        <li>
          <span class="font-semibold"
            >{qillary.contact.oficinas[1].ciudad}:</span
          >
          {qillary.contact.oficinas[1].direccion}
        </li>
      </ul>
      <ul class="space-y-2 text-gray-400">
        <li class="flex gap-2 group">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="h-5 w-5 text-white group-hover:text-amber-500"
            fill="currentColor"
          >
            <path
              d="M2 8.5V19a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8.5l-10 6.25L2 8.5z"
            ></path>
            <path d="M22 6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v.5l10 6.25L22 6.5V6z"
            ></path>
          </svg>
          <a
            class="group-hover:text-amber-500"
            href={`mailto:${qillary.contact.contactos[0].valor}`}
            >{qillary.contact.contactos[0].valor}</a
          >
        </li>
        <li class="flex gap-2 group">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 448 512"
            class="h-5 w-5 text-white group-hover:text-amber-500"
            fill="currentColor"
          >
            <path
              d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7 .9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"
            ></path>
          </svg>

          <a
            href={`https://wa.me/${qillary.contact.contactos[1].valor}`}
            title={qillary.contact.contactos[1].title}
            target="_blank"
            class="group-hover:text-amber-500"
            rel="noopener"
          >
            {qillary.contact.contactos[1].valor}
          </a>
        </li>
      </ul>
    </div>
    <!-- Oficinas -->

    <section class="px-6 col-span-1 py-8 rounded-mdmax-w-lg mx-auto">
      <h3 class="text-xl font-semibold text-white mb-2">
        Subscribe to Our Networks
      </h3>
      <section class="flex flex-col gap-4 justify-center mt-4">
        <!-- Instagram -->
        <a
          href="https://www.instagram.com/qillary.tours"
          target="_blank"
          rel="noopener noreferrer"
          title="Síguenos en Instagram"
          aria-label="Qillary Tours en Instagram"
          class="text-white hover:text-pink-400 text-md flex transition"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-instagram-icon lucide-instagram"
            ><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path
              d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line
              x1="17.5"
              x2="17.51"
              y1="6.5"
              y2="6.5"></line></svg
          >

          <span class="text-md ml-2 text-gray-400 hover:text-pink-400"
            >@Qillary.tours</span
          >
        </a>

        <!-- Facebook -->
        <a
          href="https://www.facebook.com/100084896946880"
          target="_blank"
          rel="noopener noreferrer"
          title="Conéctate con nosotros en Facebook"
          aria-label="Qillary Tours en Facebook"
          class="text-white hover:text-blue-400 flex text-md transition"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 320 512"
            width="19"
            height="19"
            class="hover:text-blue-400"
            fill="currentColor"
            aria-label="Facebook icon"
            role="img"
          >
            <path
              d="M279.14 288l14.22-92.66h-88.91V127.41c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.43 0 225.36 0c-73.22 0-121.14 44.38-121.14 124.72v70.62H22.89V288h81.33v224h100.2V288z"
            ></path>
          </svg>
          <span class="text-md ml-2 text-gray-400 hover:text-blue-400"
            >@Qillary.tours</span
          >
        </a>

        <!-- TikTok -->
        <a
          href="https://www.tiktok.com/@qillary.tours"
          target="_blank"
          rel="noopener noreferrer"
          title="Mira nuestros videos en TikTok"
          aria-label="Qillary Tours en TikTok"
          class="text-white hover:text-gray-300 flex text-md transition"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 448 512"
            width="20"
            height="20"
            fill="currentColor"
            aria-label="TikTok icon"
            role="img"
          >
            <path
              d="M325.6 32c1.6 43.2 35.2 78.1 78.4 78.6v85.4c-32.6-1.2-63.3-11.6-89.2-29v192.3c0 73.6-59.7 133.4-133.4 133.4s-133.4-59.7-133.4-133.4c0-72.1 57.1-130.7 128.8-133.3v86.7c-25.4 2.5-45.2 24-45.2 50.1 0 27.8 22.5 50.3 50.3 50.3s50.3-22.5 50.3-50.3V32h93.4z"
            ></path>
          </svg>

          <span class="text-md ml-2 text-gray-400 hover:text-gray-300"
            >@Qillary.tours</span
          >
        </a>
      </section>
    </section>
    <div class="text-white col-span-1 px-6 py-8 rounded-md max-w-lg">
      <h3 class="text-xl font-semibold mb-4">Our Instagram</h3>
      <p class="leading-relaxed text-sm text-gray-400">
        Follow our journey through breathtaking destinations, cultural
        snapshots, and unforgettable moments shared by real travelers across
        Peru.
      </p>
    </div>
    <div
      class="border-t mt-4 col-span-1 md:col-span-4 border-gray-700 py-6 text-center text-xs text-gray-400"
    >
      <p class="mb-1">
        <span lang="en">We speak English and Spanish.</span>
        <strong lang="es">Hablamos tu idioma.</strong>
      </p>
      <nav aria-label="Footer secondary navigation" class="sr-only">
        <!-- Opcional: enlaces legales o extra -->
      </nav>
      <p>© 2025 Qillary Tours. All rights reserved.</p>
    </div>
  </div>
</footer>
