---
const { data } = Astro.props;
const minus = data.name.toLowerCase();
---

<a
  href={`/multidays/${data.name
              .toLowerCase()
              .replace(/&/g, "and")
              .replace(/[^\w\s-]/g, "") // elimina signos como comas, etc.
              .replace(/\s+/g, "-")}`}
  class="relative group overflow-hidden flex flex-col min-w-75 min-h-50"
>
  <img
    src={data.image ? data.image : `/nice.png`}
    alt={data.name}
    class="w-full group-hover:scale-105 duration-500 h-auto object-cover"
  />
  <div
    class="flex text-white absolute justify-end flex-col h-full w-full border px-4 py-2"
  >
    <h3 class="font-semibold text-lg">{minus}</h3>
    <div class="flex justify-between items-center">
      <p class="text-amber-500 text-md font-semibold">â˜… 5.0 Good</p>
      <p class="mt-full font-semibold text-lg">${data.price}</p>
    </div>
  </div>
</a>
