---
const { data } = Astro.props;
const minus = data.name.toLowerCase();
---

<a
  href={`/multidays/${data.name
    .toLowerCase()
    .replace(/&/g, "and")
    .replace(/[^\w\s-]/g, "") // elimina signos como comas, etc.
    .replace(/\s+/g, "-")}`}
  class="relative group overflow-hidden flex flex-col w-full h-full min-h-70 max-w-75 max-h-70"
>
  <img
    src={data.images[0].src ? data.images[0].src : `/nice.png`}
    alt={`Photo taken during the tour ${data.name}`}
    title={data.name}
    class="w-full group-hover:scale-105 duration-500 h-full object-cover"
  />
  <div
    class="flex text-white absolute bg-black/20 justify-end flex-col h-full w-full border px-4 py-2"
  >
    <h3 class="font-semibold text-lg">{minus}</h3>
    <div class="flex justify-between items-center">
      <p class="text-amber-500 text-md font-semibold">â˜… 5.0 Good</p>
      <p class="mt-full font-semibold text-lg">${data.price}</p>
    </div>
  </div>
</a>
