---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Whatsapp from "../components/dynamic/Whatsapp.astro";
import Messenger from "../components/dynamic/Messenger.astro";
import { qillary } from "../data/qillary";
---

<html lang="en">
  <!-- Idioma configurado a español, esencial para SEO y accesibilidad regional -->
  <head>
    <!-- Charset & viewport -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Generated by Astro -->
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Essentials -->
    <title>Trips to Machu Picchu & Peru | Qillary Tours</title>
    <meta
      name="description"
      content="Discover Peru with Qillary Tours. Explore Machu Picchu, Cusco, the Sacred Valley, the Amazon, and more with our unique travel packages."
    />
    <meta
      name="keywords"
      content="Qillary Tours, Peru travel packages, Machu Picchu tours, Sacred Valley, adventure in Peru, Inca history, cultural trips"
    />
    <meta name="author" content="Qillary Tours" />

    <!-- Open Graph for social sharing -->
    <meta property="og:site_name" content="Qillary Tours" />
    <meta
      property="og:title"
      content="Trips to Machu Picchu & Peru | Qillary Tours"
    />
    <meta
      property="og:description"
      content="Join unforgettable journeys through Peru. Explore iconic destinations like Machu Picchu, Cusco, and the Andes with expert local guides."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://qillary.tours/" />
    <meta
      property="og:image"
      content="https://qillary.tours/images/TREK3_.webp"
    />
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/qillary-favicon.svg" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://qillary.tours/" />

    <!-- Preload LCP image -->
    <link as="image" href="/images/TREK3_.webp" fetchpriority="high" />


    <meta name="robots" content="index, follow" />

    <!-- Preconexión para mejorar el rendimiento -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Catamaran: pesos 100–900 -->
    <link
      href="https://fonts.googleapis.com/css2?family=Catamaran:wght@100..900&display=swap"
      rel="stylesheet"
    />

    <!-- Satisfy: cursiva decorativa -->
    <link
      href="https://fonts.googleapis.com/css2?family=Satisfy&display=swap"
      rel="stylesheet"
    />

    <!-- Poetsen One + Poppins: pesos múltiples + estilos -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poetsen+One&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="poppins">
    <Header />
    <main>
      <slot />
      <Messenger data={qillary} />
      <Whatsapp data={qillary} />
    </main>
    <Footer />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
    ></script>
    <script is:inline>
      emailjs.init("jRYXHpsbqwdF76a3Q");
    </script>
    <script
      defer
      fetchpriority="low"
      src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"
    ></script>
  </body>
</html>
