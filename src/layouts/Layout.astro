---

import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Whatsapp from "../components/dynamic/Whatsapp.astro";
import Messenger from "../components/dynamic/Messenger.astro";
import { qillary } from "../data/qillary";
---

<html lang="en">
  <!-- Idioma configurado a español, esencial para SEO y accesibilidad regional -->
  <head>
    <!-- Charset & viewport -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Generated by Astro -->
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Essentials -->
    <title>Trips to Machu Picchu & Peru | Qillary Tours</title>
    <meta
      name="description"
      content="Discover Peru with Qillary Tours. Explore Machu Picchu, Cusco, the Sacred Valley, the Amazon, and more with our unique travel packages."
    />
    <meta
      name="keywords"
      content="Qillary Tours, Peru travel packages, Machu Picchu tours, Sacred Valley, adventure in Peru, Inca history, cultural trips"
    />
    <meta name="author" content="Qillary Tours" />

    <!-- Open Graph for social sharing -->
    <meta property="og:site_name" content="Qillary Tours" />
    <meta
      property="og:title"
      content="Trips to Machu Picchu & Peru | Qillary Tours"
    />
    <meta
      property="og:description"
      content="Join unforgettable journeys through Peru. Explore iconic destinations like Machu Picchu, Cusco, and the Andes with expert local guides."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://qillary.tours/" />
    <meta
      property="og:image"
      content="https://qillary.tours/images/machu-picchu.jpg"
    />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Trips to Machu Picchu & Peru | Qillary Tours"
    />
    <meta
      name="twitter:description"
      content="Travel with purpose and passion. Unique guided tours across Peru’s most breathtaking destinations."
    />
    <meta
      name="twitter:image"
      content="https://qillary.tours/images/machu-picchu.jpg"
    />
    <meta name="twitter:site" content="@qillarytours" />
    <meta name="twitter:creator" content="@qillarytours" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/qillary-favicon.svg" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://qillary.tours/" />

    <!-- Preload LCP image -->
    <link
      rel="preload"
      as="image"
      href="/images/machu-picchu.jpg"
      fetchpriority="high"
    />

    <link
      media="print"
      onload="this.media='all'"
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>

  <body class="poppins">
    <!-- Slot donde se inyecta el contenido específico de cada página -->
    <Header />
    <main>
      <slot />
      <Messenger data={qillary} />
      <Whatsapp data={qillary} />
    </main>
    <Footer />
  </body>
</html>
