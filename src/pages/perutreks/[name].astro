---
import Secundario from "../../layouts/Secundario.astro";
import HeroStatic from "../../components/section/HeroStatic.astro";
import DetallesSection from "../../components/section/DetallesSection.astro";
import { peruTreks } from "../../data/peruTreks";

// Dile a Astro quÃ© rutas debe renderizar
export async function getStaticPaths() {
  return peruTreks.map((tour) => {
    const name = tour.name
      .toLowerCase()
      .replace(/&/g, "and")
      .replace(/[^\w\s-]/g, "")
      .trim()
      .replace(/\s+/g, "-");

    return { params: { name } };
  });
}

const { name } = Astro.params;

const destino = peruTreks.find((d) => {
  const generatedSlug = d.name
    .toLowerCase()
    .replace(/&/g, "and")
    .replace(/[^\w\s-]/g, "")
    .trim()
    .replace(/\s+/g, "-");

  return generatedSlug === name;
});
---

<Secundario title="" description="" image="" url="">
  <HeroStatic />
  <DetallesSection tour={destino} />
</Secundario>
